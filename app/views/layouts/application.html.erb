<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <ul class="nav justify-content-end">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "All Topics", topics_path %>
              <%= link_to "My Topics", user_path(current_user.id) %>
            </li>
            <li class="nav-item">
              Signed in as: <strong> <%= current_user.email %> </strong> 
            </li>
            <li class="nav-item"><%= link_to 'Edit Profile', edit_user_registration_path %> </li>
            <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
          <% else %>
            <li class="nav-item"> 
              <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %> 
            </li>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %> 
            </li>
          <% end %>
        </ul>
      </nav>
      <header class="justify-content-center">
        <h1 class="text-center">Bloc Bookmarks</h1>
      <header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      
      <%= yield %>
    </div>
  </body>
</html>
